<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1 class = "text-centered"><%= action %> Product</h1>
      <%= form_for(@product) do |product| %>
      <% if @product.errors.any? %>
        <div id="errors_explanation">
          <h2><%=pluralize(@product.errors.count,"error")%> Prohibited this product from being saved:</h2>

          <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%=message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
        <div class="form-group">
          <%= product.label :name %>
          <%= product.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= product.label :image %>
          <%= product.file_field :image, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= product.label :reference %>
          <%= product.text_field :reference, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= product.label :category_id %>
          <%= product.collection_select(:category_id, Category.all, :id, :name, {prompt:"Select Category"}, { class: 'form-control'}) %>
        </div>

        <div class="form-group">
          <%= product.label :precio %>
          <%= product.number_field :precio, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= product.label :quantity %>
          <%= product.number_field :quantity, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= product.label :brand %>
          <%= product.text_field :brand, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= product.label :description %>
          <%= product.text_area :description, class: "form-control" %>
        </div>

        <div class="actions">
          <%= link_to 'Cancel', products_path, class: 'btn btn-danger' %>
          <%= product.submit 'Save Product', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
