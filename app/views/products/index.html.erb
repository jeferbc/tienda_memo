<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">List of Products</h1>
      <table class="table">
        <thead>
          <th>Name</th>
          <th>Reference</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Brand</th>
          <th>Description</th>
          <th>Created At</th>
          <th>Options</th>
        </thead>

        <tbody>
          <% @products.each do |product|  %>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.reference %></td>
              <td><%= product.precio %></td>
              <td><%= product.quantity %></td>
              <td><%= product.brand %></td>
              <td><%= product.description %></td>
              <td><%= product.created_at %></td>
              <td>
                <%= link_to 'View', product %>
                <%= link_to "Remove",product, method: :delete, data: {confirm: 'Are you sure to delete this product?'} %>    
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= link_to "New Product", new_product_path %>
    </div>
  </div>
</div>
